<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="#F6F0ED"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <Refractored.Controls.CircleImageView
    android:id="@+id/user_photo_in_view_post"
    android:layout_marginTop="10dp"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/photoplaceholder"
    app:civ_border_color="#0D1321"
    app:civ_border_width="2dp"
    android:layout_width="80dp"
    android:layout_height="80dp" />

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="TytuÅ‚"
            android:layout_marginTop="20dp"
            android:id="@+id/viewPostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/viewPostDescription"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Opis"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/viewPostCity"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Miasto"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/viewPostButtonInterested"
        android:textAllCaps="false"
        android:text="Jestem zainteresowany!"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
